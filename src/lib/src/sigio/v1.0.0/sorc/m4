LIB	= $(LIBDIR)/libsigio_big_4.a
INCMOD	= $(LIBDIR)/incmod/sigio_big_4
FC	= $(FCMP)

$(LIB): $(LIB)(sigio_module.o) $(LIB)(sigio_r_module.o) $(LIB)(bafrio.o) $(LIB)(byteswap.o)
$(LIB)(sigio_r_module.o):	$(LIB)(sigio_module.o)
$(LIB)(bafrio.o):	bafrio.f
	$(FC) -c $(FFLAGB) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
.f.a:
	$(FC) -c $(FFLAGS) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
	mv $*.mod $(INCMOD)
byteswap.o: byteswap.c
	cc -DLINUX -c byteswap.c
	        $(AR) $(ARFLAGS) byteswap.o
